generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

model TerminalProcess {
  id        String   @id @default(uuid())
  uuid      String   @unique
  name      String
  pid       Int
  cwd       String
  isActive  Boolean  @default(false)
  createdAt DateTime @default(now())
}

model OpenFile {
  id          String   @id @default(uuid())
  projectPath String
  filePath    String
  isActive    Boolean  @default(false)
  openedAt    DateTime @default(now())

  @@unique([projectPath, filePath])
}
