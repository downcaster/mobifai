{
  "name": "mobifai-mac-client",
  "version": "1.0.0",
  "description": "Mac client for MobiFai - connects to relay server and runs terminal",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsc && caffeinate -i node --expose-gc dist/index.js",
    "build": "tsc",
    "start": "caffeinate -i node --expose-gc dist/index.js",
    "package": "npm run build && pkg ."
  },
  "bin": "dist/index.js",
  "pkg": {
    "scripts": "dist/**/*.js",
    "assets": [
      "node_modules/node-pty/build/Release/pty.node",
      "node_modules/@roamhq/wrtc/build/Release/wrtc.node",
      ".env",
      ".env.production"
    ],
    "targets": [
      "node18-macos-arm64",
      "node18-macos-x64"
    ],
    "outputPath": "bin"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.52.0",
    "@roamhq/wrtc": "^0.9.1",
    "@types/uuid": "^10.0.0",
    "chalk": "^5.3.0",
    "dotenv": "^16.3.1",
    "node-datachannel": "^0.30.0",
    "node-pty": "^1.0.0",
    "open": "^11.0.0",
    "socket.io-client": "^4.7.2",
    "strip-ansi": "^7.1.2",
    "uuid": "^13.0.0",
    "werift": "^0.22.2"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "esbuild": "^0.27.0",
    "pkg": "^5.8.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
